class Solution {
    int total=0,max=Integer.MIN_VALUE;
    public int maxSubArray(int[] nums) {
        for(int i =0; i <nums.length; i++){
            total+=nums[i];
            if(total<nums[i]){
                total=nums[i];
            }
            if(max<total){
                max=total;
            }            
            //System.out.println(max+"::"+total);
        }
        return max;
    }
}
