class Solution {
    public int[] sortedSquares(int[] nums) {
        int c = 0;
        for(int i : nums){
            nums[c++] = Math.abs(i);
        }
        for(int i = 0; i < nums.length; i++){
            for(int j = i; j < nums.length; j++){
                if(nums[i]>nums[j]){
                    int temp = nums[i];
                    nums[i] = nums[j];
                    nums[j] = temp;
                }
            }
        }
        int num = 0;
        for(int i : nums){
            if(num==nums.length){
                break;
            }
            nums[num] = (int)Math.pow(nums[num],2);
            num++;
        }

        System.out.println(Arrays.toString(nums));        
        return nums;
    }
}
