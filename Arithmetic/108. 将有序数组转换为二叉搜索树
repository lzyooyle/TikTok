class Solution {
    public TreeNode sortedArrayToBST(int[] nums) {
        return splitTree(nums,0,nums.length);
    }    
    private TreeNode splitTree(int[] nums,int begin,int end){
        if(begin>=end) return null;
        int maxIndex=(end+begin)/2;
        TreeNode root=new TreeNode(nums[maxIndex]);
        root.left=splitTree(nums,begin,maxIndex);
        root.right=splitTree(nums,maxIndex+1,end);
        return root;
    }
}
