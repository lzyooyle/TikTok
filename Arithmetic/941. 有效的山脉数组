class Solution {
    public boolean validMountainArray(int[] arr) {
        if(arr.length<3) return false;
        boolean incre=false,decre=false;
        for(int i=1;i<arr.length;i++){
            if(arr[i]==arr[i-1]) return false;
            if(arr[i]>arr[i-1]){
                decre=true;
                if(incre) return false;//如果增长结束了，再有增长则返回false
            }else if(arr[i]<arr[i-1]){
                incre=true;
                if(!decre) return false; //如果一上来就小，直接判断false
            }
        }
        return incre==true && decre==true?true:false;
    }
}
class Solution {
    public boolean validMountainArray(int[] arr) {
        if(arr.length<3) return false;
        boolean incre=false;
        int add=0,plus=0;
        for(int i=1;i<arr.length;i++){
            if(arr[i]==arr[i-1]) return false;
            if(arr[i]>arr[i-1]){
                if(plus<0) return false;
                add++;
            }else if(arr[i]<arr[i-1]){
                if(add==0) return false;
                plus--;
            }
        }
        return add>0 && plus<0?true:false;
    }
}
